{
  "compilerOptions": {
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true
  }
}
